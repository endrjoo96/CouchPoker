<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_serverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa dostÄ™pnego serwera"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/const1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=" @ "
        android:textColor="#AAA9A9"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_serverName" />

    <TextView
        android:id="@+id/textView_ipAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="adres.ip.dostepnego.serwera"
        android:textColor="#AAA9A9"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/const1"
        app:layout_constraintTop_toBottomOf="@+id/textView_serverName" />

    <Button
        android:id="@+id/button_serverSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ipAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>